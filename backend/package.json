      "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
    },
    "dependencies": {
      "bcryptjs": "^2.4.3",
      "config": "^3.3.10",
      "cors": "^2.8.5",
      "express": "^4.18.2",
      "express-validator": "^7.0.1",
      "jsonwebtoken": "^9.0.2",
      "mongoose": "^7.5.0"
    },
    "devDependencies": {
      "concurrently": "^8.2.1",
      "nodemon": "^3.0.1"
    }
  }